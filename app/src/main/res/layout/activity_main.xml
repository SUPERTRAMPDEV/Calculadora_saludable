<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.supertramp.calculadorasaludable.MainActivity"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/registros_anteriores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registros Anteriores" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_nombre"
                android:hint="Nombre:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_edad"
                android:hint="Edad:"
                android:layout_width="match_parent"
                android:inputType="number"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_peso"
                android:hint="Peso: (kg)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sexo:"
                android:gravity="center"
                android:textSize="15dp"
                />

            <RadioGroup
                android:id="@+id/radiogroupsex"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/sexo_hombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hombre" />

                <RadioButton
                    android:id="@+id/sexo_mujer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mujer" />
            </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actividad fÃ­sica:"
                android:gravity="center"
                android:textSize="15dp"
                />

            <RadioGroup
                android:id="@+id/radiogroupaf"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/baja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Baja" />

                <RadioButton
                    android:id="@+id/media"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Media/equilibrada" />

                <RadioButton
                    android:id="@+id/alta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alta" />

            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/altura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Altura: (cm)"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/boton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OK!"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
